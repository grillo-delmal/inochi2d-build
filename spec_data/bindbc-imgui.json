        "    ${RPM_BUILD_ROOT}%{_datadir}/licenses/%{name}-devel/./deps/imgui/LICENSE.txt",
        ""
    ],
    "files": [
        "%{_datadir}/licenses/%{name}-devel/*",
        ""
    ]
